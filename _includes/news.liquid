<div class="news">
  {% if site.news != blank %}
    {% assign news_size = site.news | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.announcements.scrollable%}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% if include.limit and site.announcements.limit %}
          {% assign news_limit = site.announcements.limit %}
        {% else %}
          {% assign news_limit = news_size %}
        {% endif %}

        {% for announcement in site.news.news_list %}
          <tr>
            <th scope="row" style="width: 20%">{{ announcement.date | date: '%b %d, %Y' }}</th>
            <td>{{ announcement.content | remove: '<p>' | remove: '</p>' | emojify }}</td>
          </tr>
        {% endfor %}

      </table>
    </div>
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>